<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HesapMakinesi.MainPage">

    <VerticalStackLayout
        Padding="20"
        Spacing="10">

        <Entry x:Name="Screen"
               FontSize="40"
               HorizontalTextAlignment="End"
               Placeholder="0"
               IsReadOnly="True"
               Margin="0,0,0,20"/>

        <Entry x:Name="KeyboardInput"
               HeightRequest="0.1"
               WidthRequest="0.1"
               Opacity="0"
               Margin="0,-10,0,-10"
               Text=""
               IsTextPredictionEnabled="False"
               IsSpellCheckEnabled="False"
               TextChanged="KeyboardInput_TextChanged"
               Completed="KeyboardInput_Completed"
               AutomationProperties.IsInAccessibleTree="False"/>

        <Grid RowDefinitions="*,*,*,*,*"
              ColumnDefinitions="*,*,*,*"
              RowSpacing="10"
              ColumnSpacing="10">

            <!-- Row 1 -->
            <Button Text="C" Grid.Row="0" Grid.Column="0" Clicked="Clear_Click"/>
            <Button Text="←" Grid.Row="0" Grid.Column="1" Clicked="Back_Click"/>
            <Button Text="%" Grid.Row="0" Grid.Column="2" Clicked="Operator_Click"/>
            <Button Text="/" Grid.Row="0" Grid.Column="3" Clicked="Operator_Click"/>

            <!-- Row 2 -->
            <Button Text="7" Grid.Row="1" Grid.Column="0" Clicked="Number_Click"/>
            <Button Text="8" Grid.Row="1" Grid.Column="1" Clicked="Number_Click"/>
            <Button Text="9" Grid.Row="1" Grid.Column="2" Clicked="Number_Click"/>
            <Button Text="*" Grid.Row="1" Grid.Column="3" Clicked="Operator_Click"/>

            <!-- Row 3 -->
            <Button Text="4" Grid.Row="2" Grid.Column="0" Clicked="Number_Click"/>
            <Button Text="5" Grid.Row="2" Grid.Column="1" Clicked="Number_Click"/>
            <Button Text="6" Grid.Row="2" Grid.Column="2" Clicked="Number_Click"/>
            <Button Text="-" Grid.Row="2" Grid.Column="3" Clicked="Operator_Click"/>

            <!-- Row 4 -->
            <Button Text="1" Grid.Row="3" Grid.Column="0" Clicked="Number_Click"/>
            <Button Text="2" Grid.Row="3" Grid.Column="1" Clicked="Number_Click"/>
            <Button Text="3" Grid.Row="3" Grid.Column="2" Clicked="Number_Click"/>
            <Button Text="+" Grid.Row="3" Grid.Column="3" Clicked="Operator_Click"/>

            <!-- Row 5 -->
            <Button Text="0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Clicked="Number_Click"/>
            <Button Text="." Grid.Row="4" Grid.Column="2" Clicked="Number_Click"/>
            <Button Text="=" Grid.Row="4" Grid.Column="3" Clicked="Equals_Click"/>

        </Grid>
    </VerticalStackLayout>

</ContentPage>